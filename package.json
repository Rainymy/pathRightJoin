{
  "name": "path-right-join",
  "version": "1.0.0",
  "description": " Right-side join for paths",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build-part-1": "npm run clean && npm run docs",
    "build-part-2": "npm run bundle && npm run removeDocsExtra",
    "build": "npm run build-part-1 && npm run build-part-2",
    "package-test": "npm pack --dry-run",
    "package": "npm pack",
    "prepack": "npm run build",
    "docs": "tsc",
    "removeDocsExtra": "node ./cleanOutput.js -f dist/src",
    "clean": "node ./cleanOutput.js -f dist",
    "bundle": "node esbuild.js",
    "test": "jest"
  },
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.esm"
    }
  },
  "files": [
    "dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rainymy/pathRightJoin.git"
  },
  "keywords": [
    "joinPathRight"
  ],
  "author": "Rainymy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Rainymy/pathRightJoin/issues"
  },
  "homepage": "https://github.com/Rainymy/pathRightJoin#readme",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "esbuild": "^0.25.1",
    "jest": "^29.7.0",
    "typescript": "^5.8.2"
  }
}