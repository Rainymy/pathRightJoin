{
  "compilerOptions": {
    "module": "nodenext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true
  },
  "typeAcquisition": {
    "include": [
      "jest"
    ]
  },
  "include": [
    "index.js",
    "src/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}